{% extends "../../layouts/govuk.njk" %}
{% from "components/button/macro.njk" import govukButton %}


{% block pageTitle %}
  Deploy {{githubRepo.owner}}/{{githubRepo.repo}} | PaaS Button
{% endblock %}

{% block content %}
  {{ super() }}

  <h1 class="govuk-heading-xl">Deploy <code>{{githubRepo.owner}}/{{githubRepo.repo}}</code> to GOV.UK PaaS</h1>

  <p class="govuk-body">
  You will need a GOV.UK PaaS account to deploy your app.
  </p>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half border-right">
      <p class="govuk-body">
      If you already have an account you can sign in.
      </p>
      {{ govukButton({
        text: "Sign in",
        href: "/auth/login",
        classes: "govuk-button--start"
        }) }}
    </div>
    <div class="govuk-grid-column-one-half">
      <p class="govuk-body">
      If you're new to the PaaS you can request an account.
      </p>
      {{ govukButton({
        text: "Request an account",
        href: "https://www.cloud.service.gov.uk/signup",
        classes: "govuk-button--start"
        }) }}
    </div>
  </div>



{% endblock %}
